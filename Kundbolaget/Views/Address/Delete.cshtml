@model Kundbolaget.Models.EntityModels.Address

@{
    ViewBag.Title = "Delete";
}


<h3>Är du säker på att du vill ta bort adressen?</h3>
<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">@Html.DisplayFor(model => model.Street) @Html.DisplayFor(model => model.Number)</span>
                <ul>
                    <li>
                        Gata:
                        @Html.DisplayFor(model => model.Street)
                    </li>
                    <li>
                        Gatunummer:
                        @Html.DisplayFor(model => model.Number)
                    </li>
                    <li>
                        Postkod:
                        @Html.DisplayFor(model => model.ZipCode)
                    </li>
                </ul>
                <div class="card-action">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Ta bort" class="btn btn-default" /> |
                            @Html.ActionLink("Tillbaka", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
