@model Kundbolaget.Models.EntityModels.Address

@{
    ViewBag.Title = "Detaljer";
}
<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">@Html.DisplayFor(model => model.Street) @Html.DisplayFor(model => model.Number)</span>
                <ul>
                    <li>
                        Gata:
                        @Html.DisplayFor(model => model.Street)
                    </li>
                    <li>
                        Gatunummer:
                        @Html.DisplayFor(model => model.Number)
                    </li>
                    <li>
                        Postkod:
                        @Html.DisplayFor(model => model.ZipCode)
                    </li>
                </ul>
                <div class="card-action">
                    @Html.ActionLink("Tillbaka", "Index")
                    @Html.ActionLink("Ändra adress", "Edit", new { id = Model.Id }) 
                </div>
            </div>
        </div>
    </div>
</div>