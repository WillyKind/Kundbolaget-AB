@model IEnumerable<Kundbolaget.Models.EntityModels.Address>

@{
    ViewBag.Title = "Adresser";
}

<h4>Hantera adresser</h4>

<div>
    @Html.ActionLink("Skapa Ny", "Create", null, new { @class = "orange-text" }) |
    @Html.ActionLink("Tillbaka", "AdminManager", "Home", null, new { @class = "orange-text" })
</div>
<table class="table">
    <tr>
        <th>
            Gata
        </th>
        <th>
            Gatunummer
        </th>
        <th>
            Postkod
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
       
        <td>
            @Html.ActionLink("Ändra", "Edit", new { id=item.Id }, new { @class = "orange-text" }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.Id }, new { @class = "orange-text" }) |
            @Html.ActionLink("Ta bort", "Delete", new { id=item.Id }, new { @class = "orange-text" })
        </td>
    </tr>
}

</table>
