@model Kundbolaget.Models.EntityModels.Company

@{
    ViewBag.Title = "Delete";
}

<h4>Är du säker på att du vill ta bort detta företag?</h4>

<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">@Html.DisplayFor(model => model.Name)</span>
                <ul>
                    <li>
                        Besöksadress:
                        @Html.DisplayFor(model => model.Address.Street)
                    </li>
                    <li>
                        Land:
                        @Html.DisplayFor(model => model.Country.Name)
                    </li>
                    <li>
                        Kontaktperson:
                        @Html.DisplayFor(model => model.ContactPerson.FirstName)
                    <li>
                    <li>
                        Email:
                        @Html.DisplayFor(model => model.Email)
                    </li>
                    <li>
                        Telefonnummer:
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </li>
                    <li>
                        Leveransadress:
                        @Html.DisplayFor(model => model.DeliveryAddress.Street)
                    </li>
                    <li>
                        Moderbolag:
                        @Html.DisplayFor(model => model.ParentCompany.Name)
                    </li>
                </ul>
                <div class="card-action">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Ta Bort" class="btn btn-default" />
                            @Html.ActionLink("Produktöversikt", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

