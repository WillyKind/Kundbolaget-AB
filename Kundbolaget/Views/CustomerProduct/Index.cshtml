@using System.ComponentModel.DataAnnotations
@model IEnumerable<Kundbolaget.Models.EntityModels.ProductInfo>

@{
    ViewBag.Title = "Produkter";
}

<h4>Sortiment</h4>
<div>
    @Html.ActionLink("Lägg beställning", "UploadJson", "File", null, new { @class = "orange-text" }) |
    @Html.ActionLink("Tillbaka", "CustomerSite", "Home", null, new { @class = "orange-text" }) 

</div>
<div class="row">
    @foreach (var productInfo in Model)
    {
            <div class="card col s12 m6 l4">
                <div class="card blue-grey darken-1 hoverable">
                    <div class="card-content white-text ">
                        <span class="card-title">@Html.DisplayFor(modelItem => productInfo.Name) @Html.DisplayFor(modelItem => productInfo.Volume.Milliliter)ml</span> 
                        <p>Artikelnr: @Html.DisplayFor(modelItem => productInfo.Id)</p>
                        <p>Pris per Colli: @Html.DisplayFor(modelItem => productInfo.PurchasePrice)kr</p>
                    </div>
                    <div class="divider"></div>
                    <div class="card-content activator hoverable">
                        <table class="clickable activator orange-text">
                            <tr class="activator">
                                <td class="activator">Mer information</td>
                                <td class="material-icons white-text activator">info</td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4 bordered">@Html.DisplayFor(modelItem => productInfo.Name)<i class="material-icons right">close</i></span>
                        <p>Behållare: @Html.DisplayFor(modelItem => productInfo.Container.Name)</p>
                        <p>Kategori: @Html.DisplayFor(modelItem => productInfo.ProductGroup.Category.Name)</p>
                        <p>Typ: @Html.DisplayFor(modelItem => productInfo.ProductGroup.Name)</p>
                        <p>Volym: @Html.DisplayFor(modelItem => productInfo.Volume.Milliliter)ml</p>
                        <p>ABV: @Html.DisplayFor(modelItem => productInfo.Abv)%</p>
                        <p>Beskrivning: @Html.DisplayFor(modelItem => productInfo.Description)</p>
                    </div>
                </div>
            </div>
    }
</div>
    

