@model Kundbolaget.ViewModels.OrderViewModel

@{
    ViewBag.Title = "Company";
}
<h4>Ordrar</h4>
<div>
    @Html.ActionLink("Tillbaka", "Index", null, new {@class = "orange-text"})
</div>
<hr/>
<table class="table">
    <tr>
        <th>
            Företag
        </th>
        <th>
            Order skapad
        </th>
        <th>
            Ordernummer från kund
        </th>
        <th>
            Önskat leveransdatum
        </th>
        <th>
            Pris
        </th>
    </tr>

@foreach (var item in Model.Orders) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerOrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WishedDeliveryDate)
        </td>
        <td>

            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Info","Index","OrderDetails", new {id = item.Id, companyId=item.Company.ParentCompanyId}, new { @class = "orange-text" })
        </td>
        <td>
            @Html.ActionLink("Ta bort", "Delete", new { id = item.Id}, new { @class = "orange-text" })
        </td>
    </tr>
}
</table>
<div>
    @Html.ActionLink("Ny Order", "Create", new {id = Model.ParentCompanyId}, new { @class = "orange-text" })
</div>

