@model IEnumerable<Kundbolaget.Models.EntityModels.Company>

@{
    ViewBag.Title = "Koncerner";
}
<h4>Koncerner</h4>
<div>
    @Html.ActionLink("Tillbaka", "AdminManager", "Home", null, new { @class = "orange-text" })
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col s12 m6 l4">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">@item.Name</span>
                    <p>
                        Kontaktperson: @Html.DisplayFor(modelItem=>item.ContactPerson.FirstName) @Html.DisplayFor(modelItem => item.ContactPerson.LastName)
                    </p>
                    <p>
                        Epost: @Html.DisplayFor(modelItem => item.Email)
                    </p>
                </div>
                <div class="card-action">
                    @Html.ActionLink("Visa ordrar", "FilteredOrders", new {id = item.Id})
                </div>
            </div>
        </div>
    }
</div>

