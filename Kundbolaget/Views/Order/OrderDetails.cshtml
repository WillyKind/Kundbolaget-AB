@model IEnumerable<Kundbolaget.Models.EntityModels.OrderDetails>

@{
    ViewBag.Title = "Orderdetaljer";
}

<h2>Orderdetaljer</h2>

<table class="table">
    <tr>
        <th>
            Produkt
        </th>
        <th>
            Mängd
        </th>
        <th>
            Pris styck
        </th>
        <th>
            Pris total
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductInfo.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Åter till ordrar", "FilteredOrders",new {id = ViewBag.parentCompanyId})
</div>
