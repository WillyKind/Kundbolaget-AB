@model IEnumerable<Kundbolaget.Models.EntityModels.OrderDetails>

<h2>Orderdetaljer för order: @Model.FirstOrDefault().OrderId</h2>
<div>
    <a href="javascript:GoBack();"class="orange-text" >Tillbaka</a>
    @*@Html.ActionLink("Tillbaka", "GetAllUnpickedOrders", "Order", null, new { onclick = "GoBack();" })*@
</div>
<hr/>
<table class="table">
    <tr>
        <th>
            Produkt
        </th>
        <th>
            Behållare
        </th>
        <th>
            Volym
        </th>
        <th>
            Mängd
        </th>
        <th>
            Pris per kolli
        </th>
        <th>
            Pris total
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductInfo.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductInfo.Container.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductInfo.Volume.Milliliter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservedAmount)/@Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
        </tr>
    }
</table>

<div>

</div>
<script src="~/Scripts/PreviousPage.js"></script>
