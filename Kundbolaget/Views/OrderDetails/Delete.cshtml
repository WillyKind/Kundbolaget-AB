@model Kundbolaget.Models.EntityModels.OrderDetails

@{
    ViewBag.Title = "Delete";
}


<h3>Är du säker på att du vill ta bort denna orderrad?</h3>
<div>
    <h4>Orderrad</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Produkt:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductInfo.Name)
        </dd>

        <dt>
            Mängd:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt>
            Enhetspris:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>

        <dt>
            Totalpris:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model=>model.OrderId)
        @Html.HiddenFor(model=>model.TotalPrice)
        @Html.HiddenFor(model=>model.Order.Company.ParentCompanyId)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
