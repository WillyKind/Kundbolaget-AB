@model Kundbolaget.Models.EntityModels.ProductInfo

@{
    ViewBag.Title = "Ta bort";
}


<h3>Är du säker på att du vill ta bort denna produkt?</h3>
<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">@Html.DisplayFor(model => model.Name)</span>
                <ul>
                    <li>
                        Behållare:
                        @Html.DisplayFor(model => model.Container.Name)
                    </li>
                    <li>
                        Produktgrupp:
                        @Html.DisplayFor(model => model.ProductGroup.Name)
                    </li>
                    <li>
                        Beskrivning:
                        @Html.DisplayFor(model => model.Description)
                    </li>
                    <li>
                        Alkoholhalt:
                        @Html.DisplayFor(model => model.Abv)
                    </li>
                    <li>
                        TG:
                        @Html.DisplayFor(model => model.TradingMargin)
                    </li>
                    <li>
                        Inköpspris:
                        @Html.DisplayFor(model => model.PurchasePrice)
                    </li>
                </ul>
                <div class="card-action">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Ta Bort" class="btn btn-default"/>
                            @Html.ActionLink("Produktöversikt", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>