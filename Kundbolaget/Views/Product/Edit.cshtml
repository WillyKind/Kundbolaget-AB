@model Kundbolaget.ViewModels.ManageProductInfosViewModel

@{
    ViewBag.Title = "Ändra";
}

@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new {@class = "col s12"}))
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.ProductInfo.Id)
        <div class="row">
            <h4>Produktinformation</h4>
            <form class="col s12">
                <div class="row">
                    <div class="col s12">
                        @Html.LabelFor(model => model.ProductInfo.ContainerId, "Behållare")
                        @Html.DropDownListFor(model => model.ProductInfo.ContainerId, new SelectList(Model.Containers, "Id", "Name"), new
                        {
                            htmlAttributes = new
                            {
                                @class = "dropdown-content"
                            }
                        })
                        @Html.ValidationMessageFor(model => model.Containers)
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        @Html.LabelFor(model => model.ProductInfo.VolumeId, "Volym")
                        @Html.DropDownListFor(model => model.ProductInfo.VolumeId, new SelectList(Model.Volumes, "Id", "Milliliter"), new
                        {
                            htmlAttributes = new
                            {
                                @class = "dropdown-content"
                            }
                        })
                        @Html.ValidationMessageFor(model => model.Volumes)
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        @Html.LabelFor(model => model.ProductInfo.ProductGroupId, "Produktgrupp")
                        @Html.DropDownListFor(model => model.ProductInfo.ProductGroupId, new SelectList(Model.ProductGroups, "Id", "Name"), new
                        {
                            htmlAttributes = new
                            {
                                @class = "dropdown-content"
                            }
                        })
                        @Html.ValidationMessageFor(model => model.ProductGroups)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.LabelFor(model => model.ProductInfo.Name, "Produktnamn")
                        @Html.EditorFor(model => model.ProductInfo.Name)
                        @Html.ValidationMessageFor(model => model.ProductInfo.Name)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.LabelFor(model => model.ProductInfo.Description, "Beskrivning")
                        @Html.EditorFor(model => model.ProductInfo.Description)
                        @Html.ValidationMessageFor(model => model.ProductInfo.Description)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.LabelFor(model => model.ProductInfo.Abv, "Alkoholhalt")
                        @Html.EditorFor(model => model.ProductInfo.Abv)
                        @Html.ValidationMessageFor(model => model.ProductInfo.Abv)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.LabelFor(model => model.ProductInfo.PalletDiscount, "Pallrabatt")
                        @Html.EditorFor(model => model.ProductInfo.PalletDiscount)
                        @Html.ValidationMessageFor(model => model.ProductInfo.PalletDiscount)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.LabelFor(model => model.ProductInfo.Price, "Pris per kolli")
                        @Html.EditorFor(model => model.ProductInfo.Price)
                        @Html.ValidationMessageFor(model => model.ProductInfo.Price)
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6">
                        @Html.LabelFor(model => model.ProductInfo.NewPrice, "Nytt pris")
                        @Html.EditorFor(model => model.ProductInfo.NewPrice)
                        @Html.ValidationMessageFor(model => model.ProductInfo.NewPrice)
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">date_range</i>
                        @Html.EditorFor(model => model.ProductInfo.PriceStart, new
                        {
                            HtmlAttributes = new
                            {
                                @class = "datepicker",
                                Value = Model.ProductInfo.PriceStart?.ToString("yyyy/MM/dd")
                            }
                        })
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="submit" value="Spara" class="btn teal"/> 
                        @Html.ActionLink("Tillbaka", "Index", null, new {@class = "btn blue"})
                    </div>
                </div>
            </form>
        </div>
    </div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jqueryValidationFix.js"></script>
