@model Kundbolaget.Models.EntityModels.ProductStock

@{
    ViewBag.Title = "Details";
}


<div>
    <h4>Lagerdetaljer</h4>
    <hr/>
</div>

<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">@Html.DisplayFor(model => model.Warehouse.Name)</span>
                <ul>
                    <li>
                        Antal:
                        @Html.DisplayFor(model => model.Amount)
                    </li>
                    <li>
                        Produktartikel:
                        @Html.DisplayFor(model => model.ProductInfo.Name)
                    </li>
                </ul>

                <div class="card-action">
                    @Html.ActionLink("Ändra", "Edit", new {id = Model.Id})
                    @Html.ActionLink("Produktöversikt", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
